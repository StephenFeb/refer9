<div class="row">
    <div class="col-sm-6">
        <%= form_for @post do |form| %>
            <div class="form-group">
                <%= label_tag :title %>
                <%= form.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= label_tag :content %>
                <%= form.text_area :content, class: "form-control" %>
            </div>
            <%= form.submit "Post", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>