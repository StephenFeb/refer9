<div class="row">
    <div class="col-sm-6">
        <%= form_for [@post, @comment] do |form| %>
            <div class="form-group">
                <%= label_tag :content %>
                <%= form.text_area :content, class: "form-control" %>
            </div>
            <%= form.submit "Post Comment", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>