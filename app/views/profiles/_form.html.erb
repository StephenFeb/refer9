<%= form_with(model: profile, local: true) do |form| %>
    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
  
        <ul>
          <% profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label "Profile Photo" %>
      <%= form.file_field :avatar %>
    </div>
  
    <div class="form-group">
      <label for="exampleFormControlInput1">Name</label>
      <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="">
    </div>

    <div class="form-group">
      <label for="exampleFormControlInput1">Current Job Title</label>
      <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="">
    </div>

  <select class="custom-select">
    <option selected>Work Experience</option>
    <option value="1">1 Year</option>
    <option value="2">2-5 Years</option>
    <option value="3">5+ Years</option>
  </select>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Skills</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>