<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Doccument", new_cv_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Ttile</th>
      <th>Download Here</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @cvs.each do |cv| %>
      <tr>
        <td><%= cv.title %></td>
        <td><%= link_to "Download Resume", cv.resume_url %></td>
        <td><%= button_to "Delete",  cv, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure that you wish to delete #{cv.title}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>